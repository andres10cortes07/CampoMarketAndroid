<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutFragmentMasOpcionesAdmin">

    <!-- Header fijo -->
    <include
        android:id="@+id/includeHeader"
        layout="@layout/header_admin" />

    <!-- Contenido scrollable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/ttl_categorias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ttl_opciones"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:textSize="24sp"
                android:textColor="@color/naranja"
                android:fontFamily="@font/nunito_bold" />

            <LinearLayout
                android:id="@+id/opcionTiendas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/gris_claro"
                android:layout_marginTop="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ubicacionTiendas"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/negro"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flecha"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/opcionEditarCuenta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/gris_claro"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/editar_mi_cuenta"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/negro"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/flecha"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/opcionCerrarSesion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/gris_claro"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cerrarSesion"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_bold"
                    android:textColor="@color/negro"
                    android:textSize="16sp"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/salir_negro"
                    android:textSize="10sp"/>
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copyright1"
            android:textColor="@color/gris"
            android:fontFamily="@font/nunito_bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copyright2"
            android:textColor="@color/gris"
            android:fontFamily="@font/nunito_bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/copyright3"
            android:textColor="@color/gris"
            android:fontFamily="@font/nunito_bold"/>
    </LinearLayout>

    <!-- Footer fijo al final -->
    <include
        android:id="@+id/includeFooter"
        layout="@layout/footer_admin" />

</LinearLayout>