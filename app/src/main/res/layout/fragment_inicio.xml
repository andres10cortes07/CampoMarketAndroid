<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Header fijo -->
    <include
        android:id="@+id/includeHeader"
        layout="@layout/header_layout" />

    <!-- Contenido scrollable con peso 1 -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal"
                android:background="@drawable/barra_busqueda"
                android:paddingHorizontal="12dp"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/campoBarraBusqueda"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:hint="@string/placeholderBarraBusqueda"
                    android:textColorHint="#8B8A8A"
                    android:padding="0dp"
                    android:layout_marginEnd="8dp"
                    android:inputType="text"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_bold"/>

                <ImageView
                    android:id="@+id/btnBarraBusqueda"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/lupa" />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VISTA DE PRODUCTOS AL INGRESAR A LA APP SIN INICIAR SESION" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>